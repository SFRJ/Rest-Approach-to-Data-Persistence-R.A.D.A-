<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="domain">
    <class name="domain.Address" table="ADDRESS">
        <id name="id" column="UNIQUE_ID">
            <generator class="increment"/>
        </id>

        <property name="firstLine" column="FIRST_LINE"/>
        <property name="secondLine" column="SECOND_LINE"/>
        <property name="postcode" column="POSTCODE"/>

        <set name="persons" table="PERSON" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="PERSON_TO_ADDRESS_FK" not-null="true"/>
            </key>
            <one-to-many class="domain.Person"/>
        </set>
    </class>
</hibernate-mapping>