<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="domain">
    <class name="domain.Person" table="PERSON">
        <id name="id" column="UNIQUE_ID">
            <generator class="increment"/>
        </id>

        <property name="firstName" column="FIRST_NAME"/>
        <property name="secondName" column="SECOND_NAME"/>
        <many-to-one name="personToAddresFk" class="domain.Address" fetch="select">
            <column name="PERSON_TO_ADDRESS_FK" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>